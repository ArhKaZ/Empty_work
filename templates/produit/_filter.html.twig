{% form_theme form 'bootstrap_4_layout.html.twig' %}
{{ form_start(form) }}
<div class="m-2">
    {{ form_row(form.dans_catalogue) }}
</div>
{{ form_row(form.q) }}
<div class="mt-3">
    <h4>Collections</h4>
    {{ form_row(form.collections) }}
</div>
<div class="mt-3">
    <h4>Articles</h4>
    {{ form_row(form.articles) }}
</div>
<div class="row mt-3">
    <button type="submit" class="btn btn-primary col-9">Filtrer</button>
    <div class="col">
        {{ form_row(form.reset) }}
    </div>
</div>
{{ form_end(form) }}