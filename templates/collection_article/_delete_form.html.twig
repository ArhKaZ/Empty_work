<form method="post" action="{{ path('collection_delete', {'id': collection.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette collection ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ collection.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
