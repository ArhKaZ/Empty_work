{% extends 'base.html.twig' %}

{% block title %}Mon stock : {{ matiere_premiere.ref }}{% endblock %}

{% block body %}
    <h1 class="mb-5"><a
                href="{{ path('matiere_premiere_show', {id: matiere_premiere.id}) }}">{{ matiere_premiere.ref }}</a>
    </h1>

    <div class="row">
        <div class="col">
            <h1>Stock SOBELE : {{ matiere_premiere.stockSobele }}</h1>
            <table class="table">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Quantité</th>
                    <th>Commentaire</th>
                    <th>Origine</th>
                </tr>
                </thead>
                <tbody>
                {% for stock_mp in stock_mps_1 %}
                    <tr>
                        <td>{{ stock_mp.date ? stock_mp.date|date('d/m/Y H:i') : '' }}</td>
                        <td>{{ stock_mp.quantitee }}</td>
                        <td>{{ stock_mp.commentaire }}</td>
                        <td>{{ stock_mp.origine }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Ancun de stock</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('matiere_premiere_stock_update', {id: matiere_premiere.id, lieu: 'SOBELE'}) }}" class="btn btn-primary">Modifier le stock SOBELE</a>
        </div>
        <div class="col">
            <h1>Stock MARJORIS : {{ matiere_premiere.stockMarjoris }}</h1>
            <table class="table">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Quantité</th>
                    <th>Commentaire</th>
                    <th>Origine</th>
                </tr>
                </thead>
                <tbody>
                {% for stock_mp in stock_mps_2 %}
                    <tr>
                        <td>{{ stock_mp.date ? stock_mp.date|date('d/m/Y H:i') : '' }}</td>
                        <td>{{ stock_mp.quantitee }}</td>
                        <td>{{ stock_mp.commentaire }}</td>
                        <td>{{ stock_mp.origine }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Ancun de stock</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('matiere_premiere_stock_update', {id: matiere_premiere.id, lieu: 'MARJORIS'}) }}" class="btn btn-primary">Modifier le stock MARJORIS</a>
        </div>
    </div>
{% endblock %}
