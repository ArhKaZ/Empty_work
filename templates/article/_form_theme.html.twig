{% block collection_row %}
    {% if prototype is defined %}
        {% set attr = attr|merge({'data-prototype': block('collection_item_widget') }) %}
    {% endif %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Fourniture</th>
            <th scope="col" class="col-2">Quantit√© / Long utile</th>
            <th scope="col" class="text-end">
                <a href="" class="mp-add" data-collection-holder-class="tags"><i class="bi bi-plus-circle fs-5"></i></a>
            </th>
        </tr>
        </thead>
        <tbody class="mp-warper" {{ block('widget_container_attributes') }}>
        {% for use in form %}
            <tr class="mp-item">
                <th scope="row">{{ form_widget(use.matiere_premiere) }}</th>
                <td>{{ form_widget(use.quantitee) }}</td>
                <td class="text-end">
                    <a href="" class="mp-remove"><i class="bi bi-x-circle fs-5 text-danger"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock collection_row %}

{% block collection_item_widget %}
    <tr class="col mp-item">
        <th scope="row">{{ form_widget(prototype.matiere_premiere) }}</th>
        <td>{{ form_widget(prototype.quantitee) }}</td>
        <td class="text-end">
            <a href="" class="mp-remove"><i class="bi bi-x-circle fs-5 text-danger"></i></a>
        </td>
    </tr>
{% endblock collection_item_widget %}