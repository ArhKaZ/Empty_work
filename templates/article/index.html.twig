{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <h1>Articles</h1>

    <table class="table table-striped mt-3">
        <thead>
        <tr>
            <th scope="col" class="col-2">Nom</th>
            <th scope="col" class="col-2">Ref compta</th>
            <th scope="col">Tailles</th>
            <th scope="col" class="text-end col-2">
                <a href="{{ path('article_new') }}" class="btn btn-success">Cr√©er un nouvel article</a>
            </th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr class="align-middle">
                <th>{{ article.nom }}</th>
                <td>{{ article.refCompta }}</td>
                <td>
                    {% for taille in article.tailles %}
                        <a href="{{ path('article_taille_edit', {id_article: article.id, id: taille.id}) }}"
                           class="badge bg-{{ taille.mpDef ? 'secondary' : 'danger' }} text-decoration-none">{{ taille.nom }}</a>
                    {% endfor %}
                </td>
                <td class="text-end">
                    <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun article</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
