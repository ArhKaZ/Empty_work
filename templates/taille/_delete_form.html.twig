<form method="post" action="{{ path('article_taille_delete', {id_article: taille.article.id, 'id': taille.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer la taille {{ taille.nom }} de l\'article {{ taille.article.nom }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ taille.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
